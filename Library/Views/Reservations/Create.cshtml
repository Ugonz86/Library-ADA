@{
  Layout = "_Layout";
}
@model Library.Models.Reservation
<h2>New Reservation</h2>
<br>
<center>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Author)
    @Html.DropDownList("AuthorId")
    <br>
    <br>
    @Html.LabelFor(model => model.Book)
    @Html.DropDownList("BookId")
    <br>
    <br>
    @Html.LabelFor(model => model.DateTime, "Date & Time")
    @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new {@class = "form-control multi-line"}})
    <br>

    @Html.LabelFor(model => model.Quantity, "Quantity")
    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new {@class = "form-control multi-line"}})
  <br>
    <button type="submit" value="Submit!">Submit</button>
}

<br>
<h4>@Html.ActionLink("Reservations Overview", "Index")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>

</center>