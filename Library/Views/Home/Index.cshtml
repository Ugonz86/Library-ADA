@{
  Layout = "_Layout";
}
@using System.Security.Claims
@using Library.Models;

@model IEnumerable<Library.Models.Book>

  <b><h1>Welcome to Seattle's New Online library!</h1></b>
<br>

@if (User.Identity.IsAuthenticated)
{

  <h3>@Html.ActionLink("See all authors", "Index", "Authors")</h3>
  <h3>@Html.ActionLink("See all books", "Index", "Books")</h3>
